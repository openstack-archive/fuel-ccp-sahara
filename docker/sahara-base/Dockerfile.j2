FROM {{ namespace }}/openstack-base:{{ tag }}
MAINTAINER {{ maintainer }}

{{ copy_sources("openstack/sahara", "/sahara") }}

RUN useradd --user-group sahara \
    && /var/lib/microservices/venv/bin/pip --no-cache-dir install --upgrade -c /sahara/requirements.txt /sahara \
    && mkdir -p /etc/sahara \
    && cp -r /sahara/etc/* /etc/sahara
